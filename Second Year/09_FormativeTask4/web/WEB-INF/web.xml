<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>header</param-name>
        <param-value>Web App</param-value>
    </context-param>
    <context-param>
        <param-name>footer</param-name>
        <param-value>Formative Task 4 by Richard Caringal 2CSC</param-value>
    </context-param>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>model.exception.NullValueException</exception-type>
        <location>/error/NullValError.jsp</location>
    </error-page>
    <error-page>
        <exception-type>model.exception.DatabaseException</exception-type>
        <location>/error/DBNullConnection.jsp</location>
    </error-page>
    <error-page>
        <exception-type>model.exception.AuthenticationException</exception-type>
        <location>/error/authError.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>doLogin</servlet-name>
        <servlet-class>controllers.doLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doSignup</servlet-name>
        <servlet-class>controllers.doSignup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountController</servlet-name>
        <servlet-class>controllers.AccountController</servlet-class>
        <init-param>
            <param-name>jdbcClassName</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
            <!-- org.apache.derby.jdbc.ClientDriver | com.mysql.cj.jdbc.Driver -->
        </init-param>
        <init-param>
            <param-name>dbUserName</param-name>
            <param-value>app</param-value>
            <!-- app | root -->
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>app</param-value>
            <!-- app | _@dM1n1StR4t0r. -->
        </init-param>
        <init-param>
            <param-name>jdbcDriverURL</param-name>
            <param-value>jdbc:derby</param-value>
            <!-- jdbc:derby | jdbc:mysql -->
        </init-param>
        <init-param>
            <param-name>dbHostName</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>dbPort</param-name>
            <param-value>1527</param-value>
            <!-- 1527 | 3306 -->
        </init-param>
        <init-param>
            <param-name>databaseName</param-name>
            <param-value>ft4db</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>doReport</servlet-name>
        <servlet-class>controllers.doReport</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doLogin</servlet-name>
        <url-pattern>/doLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doSignup</servlet-name>
        <url-pattern>/doSignup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/AccountController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Captcha</servlet-name>
        <servlet-class>nl.captcha.servlet.SimpleCaptchaServlet</servlet-class>
        <init-param>
            <param-name>width</param-name>
            <param-value>250</param-value>
        </init-param>
        <init-param>
            <param-name>height</param-name>
            <param-value>75</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Captcha</servlet-name>
        <url-pattern>/captcha.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doReport</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
