<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mp3.controllers.LoginServlet</servlet-class>
        <init-param>
            <param-name>uname</param-name>
            <param-value>mp3username</param-value>
        </init-param>
        <init-param>
            <param-name>pword</param-name>
            <param-value>12345678</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.mp3.controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WithdrawServlet</servlet-name>
        <servlet-class>com.mp3.controllers.WithdrawServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepositServlet</servlet-name>
        <servlet-class>com.mp3.controllers.DepositServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/registeredUser/doLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/registeredUser/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WithdrawServlet</servlet-name>
        <url-pattern>/registeredUser/doWithdraw</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepositServlet</servlet-name>
        <url-pattern>/registeredUser/doDeposit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/registeredUser/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/registeredUser/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/registeredUser/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/registeredUser/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>withdraw</servlet-name>
        <jsp-file>/registeredUser/withdraw.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>withdraw</servlet-name>
        <url-pattern>/registeredUser/withdraw</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deposit</servlet-name>
        <jsp-file>/registeredUser/deposit.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>deposit</servlet-name>
        <url-pattern>/registeredUser/deposit</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>com.mp3.models.UserContextListener</listener-class>
    </listener>
    <error-page>
        <error-code>404</error-code>
        <location>/error/notFound.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.mp3.models.NullValueException</exception-type>
        <location>/error/nullError.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.mp3.models.AuthenticationException</exception-type>
        <location>/error/authError.jsp</location>
    </error-page>
    <context-param>
        <param-name>header</param-name>
        <param-value>Happy Bank</param-value>
    </context-param>
    <context-param>
        <param-name>footer</param-name>
        <param-value>MP3 By Richard Caringal and Charles Pagulayan 2CSC</param-value>
    </context-param>
</web-app>
